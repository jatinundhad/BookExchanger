<% layout('Layout/boilerplate') -%>
    <link rel="stylesheet" href="./styles/User/login.css">
    <form id="login" action="/login" method="POST">
        <div class="card shadow mt-5">
            <div class="card-header">Login</div>

            <div class="card-body">
                <label for="username" class="form-label mt-2">Username<span>*</span></label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>


                <label for="password" class="form-label mt-2">Password <span>*</span></label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password"
                    required>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="showpass">
                    <label class="form-check-label" for="flexCheckChecked">
                        Show Password
                    </label>
                </div>
                <button type="submit" class="btn btn-success mt-3 w-100">Login</button>
            </div>
        </div>
    </form>
    <script src="./scripts/showPass.js"></script>